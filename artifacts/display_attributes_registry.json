  "concepts": {
    "employee": {
      "tables": [
        "employee"
      ],
      "display_override": {
        "employee": [
          "id",
          "firstName",
          "lastName",
          "email"
        ]
      },
      "description": "When asking about employees, always show firstName and lastName"
    },
    "user": {
      "tables": [
        "user"
      ],
      "display_override": {
        "user": [
          "id",
          "firstName",
          "lastName",
          "email"
        ]
      },
      "description": "When asking about users, always show firstName and lastName"
    },
    "workorder_status": {
      "tables": [
        "workOrder",
        "workOrderStatus"
      ],
      "display_override": {
        "workOrderStatus": [
          "id",
          "name"
        ]
      },
      "required_joins": [
        "workOrder.workOrderStatusId = workOrderStatus.id"
      ],
      "description": "When asking about workorder status, show workOrderStatus.name not just the ID"
    },
    "inspection": {
      "tables": [
        "inspection",
        "inspectionTemplateWorkOrder",
        "inspectionTemplate"
      ],
      "display_override": {
        "inspection": [
          "id",
          "date",
          "status"
        ],
        "inspectionTemplate": [
          "name"
        ]
      },
      "required_joins": [
        "inspection.inspectionTemplateWorkOrderId = inspectionTemplateWorkOrder.id",
        "inspectionTemplateWorkOrder.inspectionTemplateId = inspectionTemplate.id"
      ],
      "description": "Inspections should include the template name for context"
    },
    "service": {
      "tables": [
        "service",
        "serviceTemplateWorkOrder",
        "serviceTemplate"
      ],
      "display_override": {
        "service": [
          "id",
          "date",
          "status"
        ],
        "serviceTemplate": [
          "name"
        ]
      },
      "required_joins": [
        "service.serviceTemplateWorkOrderId = serviceTemplateWorkOrder.id",
        "serviceTemplateWorkOrder.serviceTemplateId = serviceTemplate.id"
      ],
      "description": "Services should include the template name for context"
    },
    "safety": {
      "tables": [
        "safety",
        "safetyTemplateWorkOrder",
        "safetyTemplate"
      ],
      "display_override": {
        "safety": [
          "id",
          "date",
          "status"
        ],
        "safetyTemplate": [
          "name"
        ]
      },
      "required_joins": [
        "safety.safetyTemplateWorkOrderId = safetyTemplateWorkOrder.id",
        "safetyTemplateWorkOrder.safetyTemplateId = safetyTemplate.id"
      ],
      "description": "Safety records should include the template name for context"
    },
    "asset_type": {
      "tables": [
        "asset",
        "assetType"
      ],
      "display_override": {
        "assetType": [
          "id",
          "name"
        ]
      },
      "required_joins": [
        "asset.assetTypeId = assetType.id"
      ],
      "description": "When asking about asset types, show assetType.name not just the ID"
    },
    "customer_location": {
      "tables": [
        "customer",
        "customerLocation"
      ],
      "display_override": {
        "customer": [
          "id",
          "customerName"
        ],
        "customerLocation": [
          "id",
          "shipToName",
          "shipToCode"
        ]
      },
      "required_joins": [
        "customerLocation.customerId = customer.id"
      ],
      "description": "Customer locations should show both customer and location names"
    },
    "crew_with_members": {
      "tables": [
        "crew",
        "employeeCrew",
        "employee",
        "employeeRole"
      ],
      "display_override": {
        "crew": [],
        "employeeCrew": [
          "isLead"
        ],
        "employee": [
          "firstName",
          "lastName"
        ],
        "employeeRole": [
          "name"
        ]
      },
      "required_joins": [
        "crew.id = employeeCrew.crewId",
        "employeeCrew.employeeId = employee.id",
        "employeeCrew.employeeRoleId = employeeRole.id"
      ],
      "description": "When showing crew, always include employee names and roles via employeeCrew"
    },
    "equipment_with_names": {
      "tables": [
        "equipment",
        "equipmentOption"
      ],
      "display_override": {
        "equipment": [
          "quantity"
        ],
        "equipmentOption": [
          "name"
        ]
      },
      "required_joins": [
        "equipment.equipmentOptionId = equipmentOption.id"
      ],
      "description": "When showing equipment, always include equipmentOption.name for human-readable labels"
    }
  }
